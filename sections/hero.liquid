<section class="container py-5">
    <div class="row">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1>{{ section.settings.title }}</h1>
           {{ section.settings.description }}
            <a href="{{ section.settings.button_link }}" class="btn btn-secondary">{{ section.settings.button_label }}</a>
        </div>
    </div>

</section>

{% schema %}
{
    "name": "Hero",
    "class": "hero-section",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Heading Title",
            "default": "Example Heading"
        },
        {
            "type": "richtext",
            "id": "description",
            "label": "Heading Description",
            "default": "<p>Example Paragraph</p>"
        },
        {
            "type": "text",
            "id": "button_label",
            "label": "Heading Button Label",
            "default": "Button"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Heading Button Link"
        }
    ],
    "presets": [
        {
            "category": "Hero",
            "name":"Simple Hero"
        }
    ]
}
{% endschema %}