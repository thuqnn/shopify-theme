<section class="inner-hero-section">
    {% if section.settings.image !=blank %}
        <img src="{{ section.settings.image | img_url }}" alt="" loading="lazy">
    {% else %}
        {% capture current %}{% cycle '1', '2' %}{% endcapture %}
        {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder_svg' }}
    {% endif %}
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1>{{ section.settings.title }}</h1>
               {{ section.settings.description }}
                <a href="{{ section.settings.button_link }}" class="btn btn-secondary">{{ section.settings.button_label }}</a>
            </div>
        </div>
    
    </div>
</section>
<style>
.inner-hero-section{
    position: relative;
    overflow: hidden;
    width: 100%;
    height: 400px;
}
.inner-hero-section svg,
.inner-hero-section img{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: -1;
    width: 100%;
}
</style>
{% schema %}
{
    "name": "Hero",
    "class": "hero-section",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Heading Background Title"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Heading Title",
            "default": "Example Heading"
        },
        {
            "type": "richtext",
            "id": "description",
            "label": "Heading Description",
            "default": "<p>Example Paragraph</p>"
        },
        {
            "type": "text",
            "id": "button_label",
            "label": "Heading Button Label",
            "default": "Button"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Heading Button Link"
        }
    ],
    "presets": [
        {
            "category": "Hero",
            "name":"Simple Hero"
        }
    ]
}
{% endschema %}